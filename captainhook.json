{
    "commit-msg": {
        "enabled": true,
        "actions": []
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "composer test"
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting"
            },
            {
                "action": "composer dev:lint:phpcs {$STAGED_FILES|of-type:php|separated-by: }",
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": ["php"]
                    }
                ]
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": false,
        "actions": []
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    },
    "post-rewrite": {
        "enabled": false,
        "actions": []
    },
    "post-change": {
        "enabled": true,
        "actions": [
            {
                "action": "composer install",
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileChanged\\Any",
                        "args": [
                            [
                                "composer.json",
                                "composer.lock"
                            ]
                        ]
                    }
                ]
            }
        ]
    }
}
